<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#8a8a8a" />
            <stroke
                android:width="3dp"
                android:color="#00ff00" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item android:state_selected="true" >
        <shape>
            <solid
                android:color="#aabbbb" />
            <stroke
                android:width="3dp"
                android:color="#00ff00" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item android:state_checked="true" >
        <shape>
            <solid
                android:color="#aabbbb" />
            <stroke
                android:width="3dp"
                android:color="#00ff00" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item android:state_selected="false" >
        <shape>
            <solid
                android:color="#dddddd" />
            <stroke
                android:width="3dp"
                android:color="#888888" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>