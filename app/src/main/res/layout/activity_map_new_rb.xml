<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="850dp"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:src="@drawable/field_rb" />

    <FrameLayout
        android:id="@+id/blue_auto"
        android:layout_width="375dp"
        android:layout_height="470dp" />

    <FrameLayout
        android:id="@+id/red_auto"
        android:layout_width="375dp"
        android:layout_height="470dp"
        android:layout_marginStart="475dp"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/red_starting_position">
        <RadioButton
            android:id="@+id/red_starting_position_left"
            android:layout_width="35dp"
            android:layout_height="100dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="75dp"
            android:background="@drawable/rb_starting_position_red_selector"
            android:button="@null"/>
        <RadioButton
            android:id="@+id/red_starting_position_center"
            android:layout_width="35dp"
            android:layout_height="100dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="71dp"
            android:background="@drawable/rb_starting_position_red_selector"
            android:button="@null"/>
        <RadioButton
            android:id="@+id/red_starting_position_right"
            android:layout_width="35dp"
            android:layout_height="109dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/rb_starting_position_red_selector"
            android:button="@null"/>
    </RadioGroup>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/blue_starting_position">
        <RadioButton
            android:id="@+id/blue_starting_position_right"
            android:layout_width="35dp"
            android:layout_height="109dp"
            android:layout_marginStart="913dp"
            android:layout_marginTop="75dp"
            android:background="@drawable/rb_starting_position_blue_selector"
            android:button="@null"/>
        <RadioButton
            android:id="@+id/blue_starting_position_center"
            android:layout_width="35dp"
            android:layout_height="95dp"
            android:layout_marginStart="913dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/rb_starting_position_blue_selector"
            android:button="@null"/>
        <RadioButton
            android:id="@+id/blue_starting_position_left"
            android:layout_width="35dp"
            android:layout_height="102dp"
            android:layout_marginStart="913dp"
            android:layout_marginTop="73dp"
            android:background="@drawable/rb_starting_position_blue_selector"
            android:button="@null"/>
    </RadioGroup>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/imageView"
        android:id="@+id/bottomBtnLayout">
        <Button
            android:id="@+id/btn_dropped"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_drop_selector"
            android:text="DROP"
            android:textSize="30dp" />
        <Button
            android:id="@+id/btn_spilled"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_spill_selector"
            android:text="SPILL"
            android:textSize="30dp"
            android:layout_toRightOf="@+id/btn_dropped"/>
        <Button
            android:id="@+id/btn_fouled"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_foul_selector"
            android:text="FOUL"
            android:textSize="30dp"
            android:layout_toRightOf="@+id/btn_spilled"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/btn_undo"
            android:layout_toRightOf="@+id/btn_fouled"
            android:text="UNDO"
            android:textSize="30dp"
            android:textAlignment="center"
            android:background="@drawable/btn_undo_selector"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sideBtnLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/imageView"
        android:layout_above="@+id/bottomBtnLayout"
        android:layout_marginBottom="1dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/timerLayout">
            <TextView
                android:id="@+id/tv_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:text="STATE"
                android:textSize="20dp"
                android:textAlignment="center" />
            <TextView
                android:id="@+id/btn_timer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:text="TIME"
                android:textSize="25dp"
                android:textAlignment="center"
                android:layout_below="@+id/tv_state"
                android:textColor="@color/black"/>
        </RelativeLayout>
        <Button
            android:id="@+id/btn_edit_data"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/timerLayout"
            android:text="EDIT"
            android:textSize="30dp"
            android:textAlignment="center"
            android:background="@drawable/btn_edit_selector"/>
        <Button
            android:id="@+id/btn_ftb"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/btn_edit_data"
            android:text="FTB"
            android:textSize="30dp"
            android:textAlignment="center"
            android:background="@drawable/btn_ftb_selector"/>
        <ToggleButton
            android:id="@+id/tgbtn_incap"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/btn_ftb"
            android:textOn="INCAP"
            android:textOff="INCAP"
            android:textSize="30dp"
            android:textAlignment="center"
            android:background="@drawable/tgbtn_incap_selector"/>
        <TextView
            android:id="@+id/tv_teamNum"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:text="TEAM"
            android:textSize="35dp"
            android:textAlignment="center"
            android:layout_below="@+id/tgbtn_incap"
            android:textColor="@color/black"/>
    </RelativeLayout>
</RelativeLayout>