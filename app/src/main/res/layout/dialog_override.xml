<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="400dp">

    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/tv_overrideDialogTitle"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <ToggleButton
        android:id="@+id/tbtn_alliance_color"
        android:layout_width="330dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/dialogTitle"
        android:layout_marginBottom="20dp"
        android:background="@drawable/tbtn_alliance_color_selector"
        android:text="ToggleButton"
        android:textOn=""
        android:textOff="" />

    <TextView
        android:id="@+id/tv_announceTeamNum"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tbtn_alliance_color"
        android:paddingLeft="110dp"
        android:text="Team : "
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/et_overrideTeamNum"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/tv_announceTeamNum"
        android:layout_toEndOf="@+id/tv_announceTeamNum"
        android:hint="Input Team #"
        android:inputType="number"
        android:maxLength="4"/>
</RelativeLayout>